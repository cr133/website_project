<div class="row">
    <div class="col-md-12">
        {{#unless department}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{else}}
        {{#department}}
        <h2>{{departmentName}} - Department: {{departmentId}}</h2>
        <hr>
        <form method="POST" action="/departments/update">
            <input id="departmentId" name="departmentId" type="hidden" value="{{departmentId}}">
            <label for="departmentName">Department Name</label>
            <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{departmentName}}">
            <hr>
            <input type="submit" class="btn btn-primary pull-right" value="Update Department">
            <br><br><br>
        </form>
        {{/department}}
        {{/unless}}
    </div>
</div>